@using Automaton.Studio.Activities.Resources 

<div class="console-activity">
    <Row Align="middle">
        <Col Flex=@("none")>
            <div class="icon-container">
                <Icon Type="@Activity.Descriptor.Icon" Theme="outline" />
            </div>
        </Col>

        <Col Flex=@("auto")>
            <div>
                <b>@Activity.Descriptor.DisplayName</b>
            </div>
            <div>
                Write <a href="" @onclick:preventDefault>'@Activity.Text'</a> to console
            </div>
        </Col>

        <Col Class="options">
            <div class="icon-container"><Icon Type="more" Theme="outline" /></div>
        </Col>
    </Row>
</div>

@code {
    [Parameter]
    public WriteLineActivity Activity { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}

<style>
    .icon-container {
        padding: 0 16px;
    }

    .options {
        margin-left: auto;
    }

    .console-activity {
        padding: 1em;
        border-radius: 5px;
        margin: 1em 1em;
        box-shadow: 1px 1px 5px 2px rgba(179,179,179,0.46);
        -webkit-box-shadow: 1px 1px 5px 2px rgba(179,179,179,0.46);
        -moz-box-shadow: 1px 1px 5px 2px rgba(179,179,179,0.46);
    }
</style>
