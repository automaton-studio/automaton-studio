@using Automaton.Studio.Domain
@using Automaton.Core.Models
@using Blazored.FluentValidation

<Form @ref="form"
      Model="@Step"
      LabelColSpan="4"
      WrapperColSpan="20">
    <Validator>
        <FluentValidationValidator @ref="fluentValidationValidator" />
        <ValidationSummary />
    </Validator>

    <ChildContent>
        @foreach(var variable in context.Outputs.Values)
        {
            <FormItem Label="Name">
                <Input @bind-Value="@variable.Name" />
            </FormItem>
        }
    </ChildContent>
</Form>

@code {
    private Form<StudioStep> form;
    private FluentValidationValidator fluentValidationValidator;

    [Parameter]
    public StudioStep Step { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}
