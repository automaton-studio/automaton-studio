@attribute [AllowAnonymous]
@page "/login"

@using AntDesign
@using Blazored.FluentValidation

<Layout>
    <Content Id="login-user">
        <GridRow Justify="center" Align="center" Style="height: 100%; align-items:center">
            <GridCol>

                <Form Loading="loading"
                      Model="@Model"
                      Layout="@FormLayout.Vertical"
                      OnFinish="OnFinish"
                      OnFinishFailed="OnFinishFailed">

                    <Validator>
                        <FluentValidationValidator />
                    </Validator>

                    <ChildContent>
                        <Title Level="1">Sign in</Title>

                        @if (ConfigurationService.UserSignUp)
                        {
                            <FormItem>
                                Don't have an account? <a href="/register">Sign up</a>
                            </FormItem>
                        }
                       
                        <FormItem Label="User Name">
                            <Input @bind-Value="@context.UserName" />
                        </FormItem>
                        <FormItem Label="Password">
                            <InputPassword @bind-Value="@context.Password" />
                        </FormItem>
                        <FormItem>
                            <Checkbox @bind-Value="context.RememberMe">Remember me</Checkbox>
                        </FormItem>
                        <FormItem WrapperColSpan="16">
                            <Button Type="@ButtonType.Primary" HtmlType="submit">
                                Submit
                            </Button>
                        </FormItem>
                    </ChildContent>

                </Form>

            </GridCol>
        </GridRow>
    </Content>
</Layout>


<style>
    #login-user {
        height: 100%;
        background-color: white;
    }

    .site-layout-content {
        height: 100%;
    }

    .ant-layout {
        height: 100%;
    }
</style>



