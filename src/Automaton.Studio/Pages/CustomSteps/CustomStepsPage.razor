@page "/customsteps"
@using AntDesign

<Layout>
    <Header Class="header">
        <Row>
            <Col Flex=@("none") Class="page-title">
                <Space Size="@AntSizeLDSType.Large">
                    <SpaceItem>
                        <h3>Custom Steps</h3>
                    </SpaceItem>
                    <SpaceItem>
                        <Button Class="new-button" Icon="plus" @onclick="@(() => NewCustomStepDialog())">
                            New
                        </Button>
                    </SpaceItem>
                </Space>
            </Col>

            <Col Class="right-actions">
                <Space Class="right-header-items"></Space>
            </Col>
        </Row>

    </Header>

    <Content>
        <Table TItem="CustomStepModel" DataSource="@CustomStepsViewModel.CustomSteps" Loading="@loading">
            <Column Title="Name" @bind-Field="@context.Name">
                @context.Name
            </Column>

            <Column Title="Created" @bind-Field="@context.Created">
                @context.Created
            </Column>

            <Column Title="Updated" @bind-Field="@context.Updated">
                @context.Updated
            </Column>

            <ActionColumn Title="Action">
                <div>
                    <Space>
                        <SpaceItem>
                            <Button Icon="edit" @onclick="@(() => EditCustomStep(context.Id))">
                                Edit
                            </Button>
                        </SpaceItem>
                    </Space>

                    <Dropdown Placement="@Placement.Bottom" Trigger="@(new Trigger[] { Trigger.Click })">
                        <Overlay>
                            <Menu>
                                <MenuItem Icon="delete" OnClick="@(() => DeleteCustomStep(context.Id))">
                                    Delete
                                </MenuItem>
                            </Menu>
                        </Overlay>
                        <ChildContent>
                            <a href="#" @onclick:preventDefault @onmousedown:stopPropagation>
                                <Icon Type="more" Theme="outline" />
                            </a>
                        </ChildContent>
                    </Dropdown>
                </div>
            </ActionColumn>
        </Table>
    </Content>
</Layout>

<style>
    .new-button {
        margin-bottom: 15px;
    }

    .header {
        background: #fff;
        margin-bottom: 5px;
        height: 48px;
        line-height: 48px;
        width: 100%;
        box-shadow: 0 0px 1.5px rgba(0, 0, 0, 0.004), 0 0px 9px rgba(0, 0, 0, 0.07);
        padding: 0 20px 0 0;
    }

        .header .right-header-items {
            float: right;
            padding-right: 10px;
        }

        .header .page-title {
            padding-left: 20px;
        }

    .right-actions {
        margin-left: auto;
    }

</style>



