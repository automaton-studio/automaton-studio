@page "/flow/schedule/{flowid}/{flowname}"
@using AntDesign
@using Automaton.Studio.Models;
@using Blazored.FluentValidation;

<Layout>
    <Header Class="header">
        <Row>
            <Col Flex=@("none")>
            <Space Size="@AntSizeLDSType.Large">
                <SpaceItem Class="header-item">
                    <Title Level="4">Schedules<span class="subtitle"><span class="bullet">&#x2022;</span>@FlowName</span></Title>
                </SpaceItem>
            </Space>
            </Col>

            <Col Class="right-actions">
            <Space Class="right-header-items">
                <SpaceItem>
                    <Tooltip Title="New schedule">
                        <Button Class="header-button" Icon="plus" @onclick="@(() => NewSchedule())">
                            New
                        </Button>
                    </Tooltip>
                </SpaceItem>
            </Space>
            </Col>
        </Row>
    </Header>

    <Content>
        <Table TItem="FlowScheduleModel" 
            DataSource="@FlowScheduleViewModel.Schedules"
            RowExpandable="@((record)=>true)"
            Loading="@loading" 
            Class="autoscroll-list"
            OnRow="OnRow"
            OnChange="OnChange">
            <ColumnDefinitions>
                <Column Title="Name" @bind-Field="@context.Name" Width="80%">
                    @context.Name
                </Column>
                <ActionColumn Title="Action">
                    <Dropdown Placement="@Placement.Bottom" Trigger="@(new Trigger[] { Trigger.Click })">
                                <Overlay>
                                    <Menu>
                                        <Popconfirm Title="Sure to delete?"
                                                    OnConfirm="()=> DeleteSchedule(context.Id)"
                                                    OkText="Yes"
                                                    CancelText="No">
                                            <MenuItem Icon="delete">
                                                Delete
                                            </MenuItem>
                                        </Popconfirm>
                                    </Menu>
                                </Overlay>
                                <ChildContent>
                                    <Tooltip Title="More actions">
                                        <a href="#" @onclick:preventDefault @onmousedown:stopPropagation>
                                            <Icon Type="more" Theme="outline" />
                                        </a>
                                    </Tooltip>
                                </ChildContent>
                            </Dropdown>
                </ActionColumn>
            </ColumnDefinitions>
            <ExpandTemplate Context="rowData">
                <Form @ref="form"
                      Model="@rowData.Data"
                      Loading="rowData.Data.Loading"
                      Class="step-form"
                      Layout="@FormLayout.Vertical"
                      OnFinish="Save"
                      OnFinishFailed="SaveFailed">

                    <Validator>
                        <FluentValidationValidator />
                        <ValidationSummary />
                    </Validator>

                    <ChildContent>
                        <GridRow>
                            <GridCol>
                                <FormItem Label="Name" Id="schedule-name">
                                    <Input Type="text" @bind-Value="@rowData.Data.Name"  />
                                </FormItem>
                            </GridCol>
                            <GridCol>
                                <FormItem Label="Runners" Id="schedule-runners">
                                   <Select Mode="multiple" 
                                    @bind-Values="context.RunnerIds"
                                    Placeholder="Select runners..."
                                    TItemValue="Guid"
                                    TItem="Guid"
                                    AllowClear>
                                    <SelectOptions>
                                        @foreach (var item in FlowScheduleViewModel.Runners)
                                        {
                                            <SelectOption TItemValue="Guid" TItem="Guid" Value=@item.Id Label=@item.Name />
                                        }
                                    </SelectOptions>
                                </Select>   
                                </FormItem>
                            </GridCol>
                        </GridRow>
                        <GridRow >
                            <GridCol>
                                <FormItem Label="Name">
                                    <RadioGroup @bind-Value="context.CronReccurence" ButtonStyle="@RadioButtonStyle.Solid">
                                        <Radio RadioButton Value="@CronReccurence.Date">Specific Date</Radio>
                                        <Radio RadioButton Value="@CronReccurence.Minutely">Minutely</Radio>
                                        <Radio RadioButton Value="@CronReccurence.Hourly">Hourly</Radio>
                                        <Radio RadioButton Value="@CronReccurence.Daily">Daily</Radio>
                                        <Radio RadioButton Value="@CronReccurence.Weekly">Weekly</Radio>
                                        <Radio RadioButton Value="@CronReccurence.Monthly">Monthly</Radio>
                                        <Radio RadioButton Value="@CronReccurence.Yearly">Yearly</Radio>
                                    </RadioGroup>
                                </FormItem>
                            </GridCol>                          
                        </GridRow>
                        <GridRow Class="cron-dates">
                            <GridCol>
                                <FormItem Label="Date" Id="cron-date">
                                    <Input Type="text" @bind-Value="@rowData.Data.CronDate.Date"  />
                                </FormItem>
                            </GridCol>
                            <GridCol>
                                <FormItem Label="Minute">
                                    <Input Type="number" @bind-Value="@rowData.Data.CronDate.Minute" />
                                </FormItem>
                            </GridCol>
                            <GridCol>
                                <FormItem Label="Hour">
                                    <Input Type="number" @bind-Value="@rowData.Data.CronDate.Hour" />
                                </FormItem>
                            </GridCol>
                            <GridCol>
                                <FormItem Label="Day">
                                    <Input Type="number" @bind-Value="@rowData.Data.CronDate.Day" />
                                </FormItem>
                            </GridCol>
                            <GridCol>
                                <FormItem Label="Week">
                                    <Input Type="number" @bind-Value="@rowData.Data.CronDate.Week" />
                                </FormItem>
                            </GridCol>
                            <GridCol>
                                <FormItem Label="Month">
                                    <Input Type="number" @bind-Value="@rowData.Data.CronDate.Month" />
                                </FormItem>
                            </GridCol>
                        </GridRow>
                        <GridRow>
                            <FormItem>
                                <Button Type="@ButtonType.Primary" HtmlType="submit">
                                    Save
                                </Button>
                            </FormItem>
                        </GridRow>
                    </ChildContent>
                </Form>
            </ExpandTemplate>
        </Table>
    </Content>
</Layout>

<style>
    #flow-logs {
        width: 100%;
        height: 300px !important;
        overflow-x: hidden;
        font-size: smaller;
    }

    .log-spin {
        text-align: center;
        border-radius: 4px;
        margin-bottom: 20px;
        margin: 20px 0;
    }

    .cron-dates .ant-form-item-control-input-content {
        width: 80px;
        padding: 0 5px 0 0;
    }

    #cron-date  {
        width: 160px !important;
    }

    #schedule-name {
        width: 255px;
        padding-right: 10px;
    }

    #schedule-runners {
        width: 300px;
    }

</style>



