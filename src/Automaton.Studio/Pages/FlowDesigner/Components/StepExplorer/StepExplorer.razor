<div class="activities-container">
    <Row>
        <div class="activities-search">
            <Search Placeholder="Search steps" Size="@InputSize.Default" OnChange="(e)=>OnSearchChange(e)" @bind-Value="@searchText" OnSearch="OnSearch"></Search>
        </div>
    </Row>
    <Row>
        <Col Span="24">
            <Tree  
                ShowIcon
                Draggable
                DataSource="@StepsViewModel.Steps"
                TitleExpression="x => x.DataItem.DisplayName"
                ChildrenExpression="x => x.DataItem.Steps"
                IconExpression="x => x.DataItem.Icon"
                IsLeafExpression="x => x.DataItem.Steps == null || !x.DataItem.Steps.Any()"
                KeyExpression="x => x.DataItem.Name"
                OnDragStart="@((i)=> { StepsViewModel.CreateStep(i); })"
                Class="activities-tree"
                TItem="StepExplorerModel">
            </Tree>
        </Col>
    </Row>
</div>

<style>
    .activities-tree {
        padding-top: 10px;
        background-color: #fafafa;
        height: calc(100vh - 245px);
        overflow: auto
    }
</style>
