@using Automaton.Studio.Resources
@using Automaton.Studio.Domain
@using Blazored.FluentValidation


<Form 
      Model="@Flow"
      Loading="loading"
      Layout="@FormLayout.Vertical"
      Class="flow-settings-form">
    <Validator>
        <FluentValidationValidator @ref="fluentValidationValidator" />
    </Validator>

    <ChildContent>
        <GridRow>
            <Title Level="3">Settings</Title>
        </GridRow>
        <GridRow>
            <GridCol Md="24" Xs="24">
                <FormItem Label="Name">
                    <Input @bind-Value="@context.Name" Placeholder=@Placeholders.EnterFlowName />
                </FormItem>
            </GridCol>
        </GridRow>
    </ChildContent>
</Form>

<style>
    .flow-settings-form {
        background-color: #fff;
        padding: 20px;
        height: calc(100vh - 140px);
        overflow: auto;
        overflow-x: hidden;
    }
</style>