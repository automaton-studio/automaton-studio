@page "/runners"
@using AntDesign
@using Automaton.Studio.Models;

<Layout>
    <Header Class="header">
        <Row>
            <Col Flex=@("none")>
                <Space Size="@AntSizeLDSType.Large">
                    <SpaceItem Class="header-item">
                    <Title Level="4">Runners</Title>
                    </SpaceItem>               
                </Space>
            </Col>

            <Col Class="right-actions">
                <Space Class="right-header-items">
                </Space>
            </Col>
        </Row>
    </Header>

    <Content>
        <Table TItem="RunnerModel" DataSource="@RunnersViewModel.Runners" Loading="@loading" Class="autoscroll-list">
            <Column Title="Name" @bind-Field="@context.Name">
                @context.Name
            </Column>

            <Column Title="Status" @bind-Field="@context.Status">
                <Space Direction="DirectionVHType.Horizontal">
                    <SpaceItem><Icon Type="@context.StatusIcon.Icon" Theme="Fill" Class="@context.StatusIcon.Class" /></SpaceItem>
                    <SpaceItem>@context.Status</SpaceItem>
                </Space>
            </Column>
        </Table>
    </Content>
</Layout>

<style>
    .status-checking {
        color: deepskyblue;
        padding-top: 3px;
        font-size: 20px;
    }

    .status-online {
        color: limegreen;
        padding-top: 3px;
        font-size: 20px;
    }

    .status-offline {
        color: red;
        padding-top: 3px;
        font-size: 20px;
    }
</style>



