@page "/runners"
@using AntDesign
@using Automaton.Studio.Models;

<Layout>
    <Header Class="header">
        <Row>
            <Col Flex=@("none")>
                <Space Size="@AntSizeLDSType.Large">
                    <SpaceItem Class="header-item">
                    <Title Level="4">Runners</Title>
                    </SpaceItem>               
                </Space>
            </Col>

            <Col Class="right-actions">
                <Space Class="right-header-items">
                </Space>
            </Col>
        </Row>
    </Header>

    <Content>
        <Table TItem="RunnerModel" DataSource="@RunnersViewModel.Runners" Loading="@loading" Class="autoscroll-list">
            <Column Title="Name" @bind-Field="@context.Name">
                @context.Name
            </Column>
        </Table>
    </Content>
</Layout>


