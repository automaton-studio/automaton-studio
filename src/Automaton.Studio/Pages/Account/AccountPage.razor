@page "/account"
@using AntDesign
@using Blazored.FluentValidation

<Layout>
    <Header Class="header">
        <Row>
            <Col Flex=@("none") Class="page-title">
            <Space Size="@AntSizeLDSType.Large">
                <SpaceItem>
                    <h3>Account</h3>
                </SpaceItem>
                <SpaceItem>

                </SpaceItem>
            </Space>
            </Col>

            <Col Class="right-actions">
            <Space Class="right-header-items">
                <Button Icon="poweroff" OnClick="Logout">
                    Logout
                </Button>
            </Space>
            </Col>
        </Row>

    </Header>

    <Content>
        <Form Loading="loading"
              Model="@AccountViewModel"
              Layout="@FormLayout.Vertical"
              OnFinish="OnFinish"
              OnFinishFailed="OnFinishFailed">

            <Validator>
                <FluentValidationValidator />
            </Validator>

            <ChildContent>
                <Title Level="1">Sign up</Title>
                <GridRow Gutter="(16, 0)" Justify="center">
                    <GridCol Xs="24" Md="12">
                        <FormItem Label="User Name">
                            <Input @bind-Value="@context.UserName" />
                        </FormItem>
                    </GridCol>
                    <GridCol Xs="24" Md="12">
                        <FormItem Label="Email">
                            <Input @bind-Value="@context.Email" />
                        </FormItem>
                    </GridCol>
                </GridRow>

                <GridRow Gutter="(16, 0)">
                    <GridCol Xs="24" Md="12">
                        <FormItem Label="Password">
                            <InputPassword @bind-Value="@context.Password" />
                        </FormItem>
                    </GridCol>
                    <GridCol Xs="24" Md="12">
                        <FormItem Label="Confirm Password">
                            <InputPassword @bind-Value="@context.ConfirmPassword" />
                        </FormItem>
                    </GridCol>
                </GridRow>

                <GridRow Gutter="(16, 0)">
                    <GridCol Xs="24" Md="12">
                        <FormItem Label="First Name">
                            <Input @bind-Value="@context.FirstName" />
                        </FormItem>
                    </GridCol>
                    <GridCol Xs="24" Md="12">
                        <FormItem Label="Last Name">
                            <Input @bind-Value="@context.LastName" />
                        </FormItem>
                    </GridCol>
                </GridRow>

                <FormItem WrapperColSpan="16">
                    <Button Type="@ButtonType.Primary" HtmlType="submit">
                        Submit
                    </Button>
                </FormItem>
            </ChildContent>

        </Form>

    </Content>
</Layout>

<style>
    .header {
        background: #fff;
        margin-bottom: 5px;
        height: 48px;
        line-height: 48px;
        width: 100%;
        box-shadow: 0 0px 1.5px rgba(0, 0, 0, 0.004), 0 0px 9px rgba(0, 0, 0, 0.07);
        padding: 0 20px 0 0;
    }

        .header .right-header-items {
            float: right;
            padding-right: 10px;
            margin-top: 8px;
        }

        .header .page-title {
            padding-left: 20px;
        }

    .right-actions {
        margin-left: auto;
    }

</style>



