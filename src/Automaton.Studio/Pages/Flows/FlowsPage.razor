@page "/"
@using AntDesign

<Layout>
    <Header Class="header">
        <Row>
            <Col Flex=@("none")>
                <Space Size="@AntSizeLDSType.Large">
                    <SpaceItem Class="header-item">
                    <Title Level="4">Flows</Title>
                    </SpaceItem>               
                </Space>
            </Col>

            <Col Class="right-actions">
                <Space Class="right-header-items">
                    <SpaceItem>
                        <Button Class="header-button" Icon="plus" @onclick="@(() => NewFlowDialog())">
                            New
                        </Button>
                    </SpaceItem>
                </Space>
            </Col>
        </Row>
    </Header>

    <Content>
        <Table TItem="FlowModel" DataSource="@FlowsViewModel.Flows" Loading="@loading" Class="autoscroll-list">

            <Column Title="Name" @bind-Field="@context.Name">
                @context.Name
            </Column>

            <Column Title="Last Executed" @bind-Field="@context.Started">
                @if(@context.WasExecuted())
                {
                    @context.Started
                }
                else
                {
                    <span>-</span>
                }
            </Column>

            <Column Title="Execution Result" @bind-Field="@context.Status">
                <Space Direction="DirectionVHType.Horizontal">
                    @if (@context.WasExecuted())
                    {
                        <SpaceItem><Icon Type="@context.StatusIcon.Icon" Theme="Fill" Class="@context.StatusIcon.Class" /></SpaceItem>
                        <SpaceItem>@context.Status</SpaceItem>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </Space>
            </Column>


            <Column @bind-Field="@context.RunnerIds" Title="Runners" Width="300">
                <Select Mode="multiple"
                        @bind-Values="context.RunnerIds"
                        Placeholder="Select runners..."
                        TItemValue="Guid"
                        TItem="Guid"
                        AllowClear>
                    <SelectOptions>
                        @foreach (var item in FlowsViewModel.Runners)
                        {
                            <SelectOption TItemValue="Guid" TItem="Guid" Value=@item.Id Label=@item.Name />
                        }
                    </SelectOptions>
                </Select>
            </Column>

            <ActionColumn Title="Action">
                <div>
                    <Space>
                        <SpaceItem>
                            <Button Icon="caret-right" @onclick="@(() => RunFlow(context))">
                                Run
                            </Button>
                        </SpaceItem>
                        <SpaceItem>
                            <Button Icon="edit" @onclick="@(() => EditFlow(context.Id))">
                                Edit
                            </Button>
                        </SpaceItem>
                    </Space>

                    <Dropdown Placement="@Placement.Bottom" Trigger="@(new Trigger[] { Trigger.Click })">
                        <Overlay>
                            <Menu>
                                <MenuItem Icon="delete" OnClick="@(() => DeleteFlow(context.Id))">
                                    Delete
                                </MenuItem>
                            </Menu>
                        </Overlay>
                        <ChildContent>
                            <a href="#" @onclick:preventDefault @onmousedown:stopPropagation>
                                <Icon Type="more" Theme="outline" />
                            </a>
                        </ChildContent>
                    </Dropdown>
                </div>
            </ActionColumn>
        </Table>
    </Content>
</Layout>

<style>
    .status-working {
        color: deepskyblue;
        padding-top: 3px;
        font-size: 20px;
    }

    .status-success {
        color: limegreen;
        padding-top: 3px;
        font-size: 20px;
    }

    .status-error {
        color: red;
        padding-top: 3px;
        font-size: 20px;
    }
</style>


