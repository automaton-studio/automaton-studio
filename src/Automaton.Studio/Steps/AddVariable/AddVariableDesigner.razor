@using Automaton.Studio.Components

<StepDesigner Step=@Step>
    <div>
        <b>@Step.Descriptor.DisplayName</b>
    </div>
    <div>
        Add variable <a href="" @onclick:preventDefault>@Step.VariableName</a> to the Flow
    </div>
</StepDesigner>

@code {
    [Parameter]
    public AddVariableStep Step { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}

