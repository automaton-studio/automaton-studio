@using Automaton.Studio.Domain
@using Automaton.Core.Models
@using Blazored.FluentValidation

<Space Class="step-description-space">
    <SpaceItem><Icon Type="@Step.Icon" Theme="outline"/></SpaceItem>
    <SpaceItem>@Step.Description</SpaceItem>
    <SpaceItem><a href="@Step.MoreInfo" target="_blank">More info</a></SpaceItem>
</Space>
    
@code {
    [Parameter]
    public StudioStep Step { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}

<style>
    .step-description-space {
        padding: 10px;
        width: 100%;
        background-color: aliceblue;
    } 
</style>