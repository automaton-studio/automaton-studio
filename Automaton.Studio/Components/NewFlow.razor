@using Automaton.Studio.Models
@using Automaton.Studio.Resources
@inherits FeedbackComponent<FlowModel>

<Form @ref="form"
      Model="@flowModel"
      LabelColSpan="4"
      WrapperColSpan="20">
    <Validator>
        <FluentValidationValidator @ref="fluentValidationValidator" />
        @*We don't need a validation summary here because all validation is related to the Name field*@
        @*<ValidationSummary />*@
    </Validator>

    <ChildContent>
        <FormItem Label="Name">
            <Input @bind-Value="@context.Name" Placeholder=@Placeholders.EnterFlowName />
        </FormItem>
    </ChildContent>
</Form>